<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProveedorCreateActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="NOMBRE"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL NOMBRE DEL PROVEEDOR"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>


        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="CORREO"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL CORREO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="DIRECCION"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE LA DIRECCION"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="TELEFONO"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL NÃšMERO TELEFONICO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_gravity="center"
                android:gravity="center">

            <Button
                    android:id="@+id/btnCerrar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_corner"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="CERRAR"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/topmoda"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_corner"
                    android:text="GUARDAR"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>