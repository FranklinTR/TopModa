<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductoCreateActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="IMAGEN"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/rounded_items"
                android:padding="16dp">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/agregar_imagen"
                    app:tint="@color/textfont"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AGREGAR IMAGEN"
                    android:textColor="@color/textfont"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

        </LinearLayout>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="NOMBRE"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL NOMBRE DEL PRODUTO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="DESCRIPCION"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:hint=" ESCRIBE UNA DESCRIPCION DEL PRODUTO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="CATEGORIA"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <Spinner
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_items"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="MARCA"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <Spinner
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_items"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="PRECIO"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL PRECIO DEL PRODUTO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="STOCK"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint=" ESCRIBE EL STOCK DEL PRODUTO"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_items"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center">

            <Button
                    android:id="@+id/btnCerrar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_corner"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="CERRAR"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/topmoda"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_corner"
                    android:text="GUARDAR"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>