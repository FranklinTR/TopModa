<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UsuarioActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textBuscar"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint="BUSCAR"
                android:drawableStart="@drawable/buscar"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_buscar"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_items"
                android:padding="16dp">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_usuario"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="EDGAR ESCALANTE DOLORES"/>

                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="YOUSHAESCALANTE@GAMIL.COM"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_items"
                android:padding="16dp">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_usuario"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="FRANKLIN"/>

                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="FRANKLINCOD@GAMIL.COM"/>

            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btnNewUsuario"
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:text="NUEVA USUARIO"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/topmoda"
                android:layout_marginTop="280dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>