<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PedidoCreateActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center_horizontal">

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROVEEDOR"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded_items"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA DE ENTREGA"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  DD/MM/AA"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/textfont"
                    android:background="@drawable/rounded_items"
                    android:drawableEnd="@drawable/calender"
                    android:textSize="18sp"/>

        </LinearLayout>

        <Button
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/topmoda"
                android:background="@drawable/rounded_corner"
                android:text="AGREGAR PRODUCTO"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:gravity="center_horizontal">

            <Button
                    android:id="@+id/btnCerrar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_corner"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="CERRAR"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/topmoda"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_corner"
                    android:text="GUARDAR"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>