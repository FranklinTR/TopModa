<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PedidoActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textBuscar"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint="BUSCAR"
                android:drawableStart="@drawable/buscar"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/textfont"
                android:textSize="18sp"
                android:background="@drawable/rounded_buscar"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_items"
                android:padding="10dp">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="FECHA PEDIDO:10/03/24"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="FECHA ENTREGA:12/03/24"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="PROVEEDOR:TUSUKA"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TOTAL:224.20"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="ESTADO:ENVIADO"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="EDITAR"/>


                <ImageView
                        android:layout_marginTop="60dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/basura"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_items"
                android:padding="10dp">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="FECHA PEDIDO:10/03/24"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="FECHA ENTREGA:12/03/24"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="PROVEEDOR:TUSUKA"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TOTAL:224.20"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="ESTADO:ENVIADO"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="EDITAR"/>


                <ImageView
                        android:layout_marginTop="60dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/basura"/>

            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btnNewPedido"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:text="NUEVA PEDIDO"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/topmoda"
                android:layout_marginTop="150dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>